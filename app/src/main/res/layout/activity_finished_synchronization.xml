<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    android:gravity="top|center"
    android:orientation="vertical"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="15dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transferts et sélection des localForConversations terminés "
        android:textColor="?attr/colorOnBackground"
        android:layout_gravity="left"
        android:layout_marginLeft="20dp"
        tools:layout_editor_absoluteY="137dp" />
    <RelativeLayout
        android:paddingTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:tint="?attr/colorOnPrimary"
            android:src="@drawable/bluetooth_connected_icon"
            android:background="@drawable/circulare_shape"
            app:backgroundTint="?attr/colorPrimary"
            android:layout_margin="10dp"
            tools:layout_editor_absoluteX="20dp"
            tools:layout_editor_absoluteY="138dp" />

        <TextView
            android:id="@+id/device_name_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:layout_toEndOf="@+id/imageView"
            android:paddingBottom="16dp"
            android:gravity="left"
            android:textColor="?attr/colorOnBackground"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="left"
        android:paddingLeft="30dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="175dp"
            tools:layout_editor_absoluteY="324dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="?attr/colorPrimary" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/globale_stats_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:paddingTop="20dp"
        android:paddingLeft="30dp"
        android:text="Statistiques globales"
        android:textColor="?attr/colorPrimary" />
    <TextView
        android:id="@+id/global_stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cet appareil est porteur de 85 localForConversations qui doivent
        \nêtre reçus.
        \nCet appareil est porteur de 25 accusés de réception.
        \nTrouver d'autres trucs"
        android:textColor="?attr/colorOnBackground"/>

    <Button
        android:id="@+id/fin_synch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_radius"
        android:text="Terminer"
        android:backgroundTint="?attr/colorPrimary"
        android:textAllCaps="false" />


</LinearLayout>